// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int              @id @default(autoincrement())
  telegramId     String           @unique
  username       String?
  firstName      String?
  photoUrl       String?
  inviteCode     String           @unique
  invitedBy      String?
  prtqBalance    Int              @default(0)
  inviteCount    Int              @default(0)
  robotLevel     Int              @default(0)     // âœ… Robot seviyesi
  createdAt      DateTime         @default(now())

  robotPurchases RobotPurchase[]
  manualPayments ManualPayment[]  // âœ… TRC20 manuel Ã¶demeler iliÅŸkisi
}

model RobotPurchase {
  id        Int      @id @default(autoincrement())
  userId    Int
  level     Int
  amountUSD Int
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

// âœ… Manuel TRC20 Ã¶deme kayÄ±tlarÄ±
model ManualPayment {
  id         Int            @id @default(autoincrement())
  userId     Int             // ðŸ‘ˆ Int olacak, Ã§Ã¼nkÃ¼ User.id Int
  level      Int
  amountUSD  Int
  status     PaymentStatus  @default(PENDING)
  txHash     String?
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt
  user       User           @relation(fields: [userId], references: [id])
}

enum PaymentStatus {
  PENDING
  WAITING_ADMIN   // ðŸ‘ˆ EKLENEN SATIR â€” TX Hash gÃ¶nderildi, admin bekliyor
  APPROVED
  REJECTED
}
